<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>p4eclipse-parent</artifactId>
		<groupId>com.perforce</groupId>
		<version>11.1.1-SNAPSHOT</version>
		<relativePath>../p4eclipse_parent/pom.xml</relativePath>
	</parent>

	<groupId>com.perforce</groupId>
	<artifactId>p4eclipse-target</artifactId>
	<version>11.1.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>${targetPlatform}.target</file>
									<type>target</type>
									<!-- Classifier must be the same as the file name without extension -->
									<classifier>${targetPlatform}</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>